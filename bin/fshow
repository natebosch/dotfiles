#!/bin/bash
#
# Repeatedly choose commits and `git show` them.

set -e

git rev-parse --is-inside-work-tree >/dev/null

usage() {
  cat <<EOF
Fuzzy find git commits and show the diff.

Uses \`fzc\` to find commits. Hit <enter> to show the diff. Hit <ctrl-d> to
exit.

Options:
  -h Show this message
  -a Show commits from all branches.
EOF
}

all_branches=0

while getopts "ha" option; do
  case $option in
    a) all_branches=1 ;;
    h)
      usage
      exit 0
      ;;
    ?)
      usage
      exit 64
      ;;
  esac
done

fzc_flags="-pq"
if ((all_branches == 1)); then
  fzc_flags="-apq"
fi

previous_query=
while lines=$(fzc "$fzc_flags" "$previous_query"); do
  previous_query=$(head -1 <<<"$lines")
  results=$(tail -n +2 <<<"$lines")
  while read -r line; do
    git show --color=always -m "$line"
  done <<<"$results"
done
