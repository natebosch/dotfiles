#!/bin/bash

if [[ $# -ge 1 ]]; then
  project_name=$1
else
  project_name=$(find ~/projects -maxdepth 1 -mindepth 1 -type d |\
    awk -F/ '{print $NF}' |\
    fzf |\
    tail -n1)
fi
if [[ -z $project_name ]]; then
  exit -1
fi

cd ~/projects/"$project_name" || exit
if [[ ! -d ".git" ]]; then
  shopt -s nullglob
  dirs=(*/)
  if [[ "${#dirs[@]}" -eq "1" && -d "${dirs[0]}/.git" ]]; then
    cd "${dirs[0]}" || exit
  fi
fi

session_finder "${project_name//\./-}"
